@model Monografia.Models.promocion

@{
    ViewBag.Title = "Eliminar promoción";
}
@Scripts.Render("~/bundles/jqueryval")

<h3>Está seguro de eliminar esta promocion?</h3>
<div>

    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayName("Nombre de promoción")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_promocion)
        </dd>

        <dt>
            @Html.DisplayName("Código de producto")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cod_producto)
        </dd>

        <dt>
            @Html.DisplayName("Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="row col-lg-12">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
        </div>
    }
</div>
