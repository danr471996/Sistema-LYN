@model Monografia.Models.promocion


@Scripts.Render("~/bundles/jqueryval")

<div class="card">
    <div class="card-header">
        <h3>Está seguro de eliminar esta promocion?</h3>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayName("Nombre de promoción")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre_promocion)
            </dd>

            <dt>
                @Html.DisplayName("Código de producto")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.productos.Codigo_producto)
            </dd>

        </dl>
    </div>
    <div class="card-footer">
        @using (Html.BeginForm())
        {

            <div class="row col-lg-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save">Guardar</i>
                </button>
            </div>
        }
    </div>
</div>
