@model Monografia.Models.promocion

@{

    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@Styles.Render("~/Scripts/Datatable")

<div class="card border-top border-0 border-3 border-success">
    <div class="card-header"><h4 class="text-center">Promoción</h4> </div>

</div>
<div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" style="@(ViewBag.Mensaje!=null ? "display: block;" : "display: none;")" role="alert">

    @Html.Raw(@ViewBag.Mensaje)

    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card border-start border-0 border-3 border-info">
        <div class="card-header">
            <h4>Nueva Promoción</h4>
        </div>
        <div class="card-body">
            <br>
            <div class="row">
                <div class="col-md-6">
                    @Html.Label("Nombre de promoción", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Nombre_promocion, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return lettersOnly(event,'P');" } })
                </div>
                <div class="col-md-6">
                    @Html.Label("Código de producto", htmlAttributes: new { @class = "form-label" })
                    @{
                        string cod_producto = "";
                        if (ViewBag.cod_producto != null)
                        {
                            cod_producto = Convert.ToString(ViewBag.cod_producto);
                        }
                    }
                    @Html.Editor("Codigo_producto", new { htmlAttributes = new { @class = "form-control", @value = cod_producto, @min = "0", @onkeypress = "return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" } })
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-6">
                    @Html.Label("Cantidad desde", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Cant_desde, new { htmlAttributes = new { @class = "form-control", @min = "0", @onkeypress = "return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" } })
                </div>
                <div class="col-md-6">
                    @Html.Label("Cantidad hasta", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Cant_hasta, new { htmlAttributes = new { @class = "form-control", @min = "0", @onkeypress = "return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" } })
                </div>
            </div>
            <br>
            <div class="row text-center">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"> Guardar</i>
                    </button>
                </div>
            </div>
        </div>
    </div>


    <div class="card border-start border-0 border-3 border-info">
        <div class="card-header">
            <h4>Promociones</h4>
        </div>
        <div class="card-body">
            <br>
            <br>
            <table id="tbpromocion" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>
                            @Html.DisplayName("Nombre de promoción")
                        </th>
                        <th>
                            @Html.DisplayName("Codigo de producto")
                        </th>
                        <th>
                            @Html.DisplayName("Cantidad desde")
                        </th>
                        <th>
                            @Html.DisplayName("Cantidad hasta")
                        </th>
                        <th>
                            @Html.DisplayName("Precio unitario")
                        </th>
                        <th>
                            @Html.DisplayName("Estado")
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0; // Inicializa el contador de fila
                    }
                    @foreach (var item in (List<Monografia.Models.promocion>)ViewBag.listapromocion)
                    {
                        i++;
                        <tr>
                            <td scope="row">@(i)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_promocion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.productos.Codigo_producto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cant_desde)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cant_hasta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio_unitario)
                            </td>
                            <td>
                                @if (item.Estado == 1)
                                {
                                    <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-check fa-lg" style="color: #4ef46f;"></i> Activo</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-gradient text-dark open-sans"><i class="fas fa-times fa-lg" style="color: #ff0a0a;"></i>Inactivo</span>
                                }
                            </td>
                            <td class="text-center">
                                <a data-modal="" href=@Url.Action("Deletepromocion", "Admin_productos",new { id = item.Idpromocion })> <i class="far fa-trash-alt fa-lg" style="color: #ff0a0a;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <input type="hidden" id="Mensaje" value="@ViewBag.mensajeexito" />
}



@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
        $(function () {
            $('#tbpromocion').DataTable({
                "language": {
                    "url": "/Scripts/es_es.json"
                }, scrollX: true
            })
            var tableIds = ['tbpromocion']; // Lista de IDs de las tablas
            redimensionatable(tableIds);
        });
    </script>
}


