@model IEnumerable<Monografia.Models.promocion>
@{

    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@Styles.Render("~/Scripts/Datatable")

<div class="card border-start border-0 border-3 border-info">
    <div class="card-header">
        <h4 class="text-center">Promociones</h4>
    </div>

    <div class="card-body">
        <br>
        <div class="row">
            <div class="col-md-2">
                <a data-modal="" href=@Url.Action("Createpromocion", "Admin_productos") class="btn btn-primary"> <i class="fa fa-plus">Agregar</i></a>
            </div>
        </div>
        <br>
        <br>
        <table id="tbpromocion" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th>
                        @Html.DisplayName("Nombre de promoción")
                    </th>
                    <th>
                        @Html.DisplayName("Codigo de producto")
                    </th>
                    <th>
                        @Html.DisplayName("Cantidad desde")
                    </th>
                    <th>
                        @Html.DisplayName("Cantidad hasta")
                    </th>
                    <th>
                        @Html.DisplayName("Precio unitario")
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0; // Inicializa el contador de fila
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td scope="row">@(i)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre_promocion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.productos.Codigo_producto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cant_desde)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cant_hasta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio_unitario)
                        </td>
                        <td>
                            @if (item.Estado == 1)
                            {
                                <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-check fa-lg" style="color: #4ef46f;"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-times fa-lg" style="color: #ff0a0a;"></i>Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <a data-modal="" href=@Url.Action("Editpromocion", "Admin_productos", new { id = item.Idpromocion })> <i class="far fa-edit fa-lg" style="color: #0040ff;"></i></a>&nbsp
                            <a data-modal="" href=@Url.Action("Deletepromocion", "Admin_productos",new { id = item.Idpromocion })> <i class="far fa-trash-alt fa-lg" style="color: #ff0a0a;"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>



@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
        $(function () {
            $('#tbpromocion').DataTable({
                "language": {
                    "url": "/Scripts/es_es.json"
                }, scrollX: true
            })
            var tableIds = ['tbpromocion']; // Lista de IDs de las tablas
            redimensionatable(tableIds);
        });
    </script>
}


