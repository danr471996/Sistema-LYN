@model Monografia.Models.Modelo_contenedor.Factura
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("Agregarproducto", "Facturacion", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="card">
        <div class="card-header">
            <h4>Producto</h4>
        </div>
        <div class="card-body">
           @Html.Hidden("numticket", (int)ViewBag.numticket)
         <br>
            <div class="row">
                <div class="col-md-12">
                    @Html.Label("Ingrese Codigo de producto", htmlAttributes: new { @class = "form-label" })
                    @Html.Editor("codproducto", new { htmlAttributes = new { @class = "form-control " } })
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-plus">Agregar</i>
            </button>
        </div>
    </div>
 
}
