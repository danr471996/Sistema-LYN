
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("Facturar", "Facturacion", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h4>Cobrar</h4>
        </div>
        <div class="card-body">
         <br>
            <div class="row text-center">
                <div class="col-md-2">
                    @Html.Label("Total a pagar", htmlAttributes: new { @class = "form-label" })
                    @Html.Label(" ", (string)Session["totalpago"], htmlAttributes: new { @class = "form-label" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Label("Pago en efectivo", htmlAttributes: new { @class = "form-label" })
                    @Html.Editor("montopago", new { htmlAttributes = new { @class = "form-control " } })
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-money">Realizar Cobro </i>
            </button>
        </div>
    </div>
 
}
