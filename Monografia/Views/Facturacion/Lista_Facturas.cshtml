@model IEnumerable<Monografia.Models.factura>

@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}

@Styles.Render("~/Scripts/Datatable")

   <div class="card border-start border-0 border-3 border-info">

    <div class="card-header">
        <h4 class="text-center">Facturas</h4>
    </div>

    <div class="card-body">
        <br>
        <div class="row">

            <table id="tbfacturas" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>
                            @Html.DisplayName("Fecha de factura")
                        </th>
                        <th>
                            @Html.DisplayName("Cajero")
                        </th>
                        <th>
                            @Html.DisplayName("Cliente")
                        </th>
                        <th>
                            @Html.DisplayName("Numero de factura")
                        </th>
                        <th>
                            @Html.DisplayName("Monto Factura")
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>

                </thead>

                <tbody>
                    @{
                        int i = 0; // Inicializa el contador de fila
                    }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td scope="row">@(i)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha_alta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario_alta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Idcliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Num_factura)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto_total)
                            </td>
                            <td class="text-center">
                                <a data-modal="" href=@Url.Action("impresionfactura", "Facturacion", new { idfactura = item.Idfactura })> <i class="far fa-file-pdf fa-lg" style="color: #ff0a0a;"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>

    @section Scripts
{
        @Scripts.Render("~/bundles/datatables")
        <script type="text/javascript">
            $(function () {
                $('#tbfacturas').DataTable({
                    "language": {
                        "url": "/Scripts/es_es.json"
                    },scrollX:true
                })
                var tableIds = ['tbfacturas']; // Lista de IDs de las tablas
                redimensionatable(tableIds);
            });
           
        </script>
    }
