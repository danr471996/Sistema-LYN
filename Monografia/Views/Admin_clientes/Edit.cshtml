@model Monografia.Models.clientes

@{
    ViewBag.Title = "Modificar Cliente";
    //Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Idcliente)

            <div class="row col-lg-12" style="color:gray">
                <h5>- Cambie la información deseada del cliente y haga clic en guardar cambios:</h5>
            </div>
            <br>

            <div class="row col-lg-12">
                @Html.Label("Nombres y apellidos", htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })

                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

            </div>
            <br>
            <div class="row col-lg-12 ">
                @Html.Label("Dirección", htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })

                @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })

            </div>
            <br>
            <div class="row col-lg-12">
                @Html.Label("Teléfono", htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })

                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })

            </div>
            <br>
            <div class="row col-lg-12">
                @Html.Label("Limite de crédito", htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })

                @Html.EditorFor(model => model.Limite_credito, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Limite_credito, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
            <div class="row col-lg-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
       
        }
