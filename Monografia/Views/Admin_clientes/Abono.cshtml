@model Monografia.Models.clientes

@{
    Layout = null;
}
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h4>Abono</h4>
        </div>
        <div class="card-body">
            <br>
            <form class="row g-3">
                <div class="row">
                    <div class="col-md-12">
                        @Html.Label("Ingrese monto abonar", htmlAttributes: new { @class = "form-label" })
                        @Html.Editor("agregar_cantidad", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"> Guardar</i>
            </button>

        </div>
    </div>
}

