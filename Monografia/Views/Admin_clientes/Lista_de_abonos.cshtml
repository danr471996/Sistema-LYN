@model IEnumerable<Monografia.Models.pagos>

@{
    Layout = null;
}

<div class="card">
    <div class="card-header">
        <h4>Lista de abonos</h4>
    </div>
    <div class="card-body">
        <br>
        <br>
        <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" style="@(ViewBag.Mensaje!=null ? "display: block;" : "display: none;")" role="alert">

            @Html.Raw(@ViewBag.Mensaje)

            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        @if (Model != null)
        {
            <table id="tblistabonos" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>
                            @Html.DisplayName("Fecha de pago")
                        </th>
                        <th>
                            @Html.DisplayName("Usuario pago")
                        </th>
                        <th>
                            @Html.DisplayName("Id factura")
                        </th>
                        <th>
                            @Html.DisplayName("Monto pagado")
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0; // Inicializa el contador de fila
                    }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td scope="row">@(i)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha_alta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario_alta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_factura)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto_pagado)
                            </td>
                            <td class="text-center">
                                <a data-modal="" href=@Url.Action("Editabono", "Admin_clientes", new { id = item.Id_factura })> <i class="far fa-edit fa-lg" style="color: #0040ff;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>


    <script type="text/javascript">
        $(function () {
            $('#tblistabonos').DataTable({
                "language": {
                    "url": "/Scripts/es_es.json"
                }, scrollX: true
            })
            var tableIds = ['tblistabonos']; // Lista de IDs de las tablas
            redimensionatable(tableIds);

        });

    </script>



