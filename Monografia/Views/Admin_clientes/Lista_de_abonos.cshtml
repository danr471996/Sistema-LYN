@model IEnumerable<Monografia.Models.pagos>

@{
    Layout = null;
}
@Styles.Render("~/Content/datatables")
<div class="card">
    <div class="card-header">
        <h4>Lista de abonos</h4>
    </div>
    <div class="card-body">
        <br>
        <br>
        <table id="tblistabonos" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Fecha de pago")
                    </th>
                    <th>
                        @Html.DisplayName("Usuario pago")
                    </th>
                    <th>
                        @Html.DisplayName("Id factura")
                    </th>
                    <th>
                        @Html.DisplayName("Monto pagado")
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_alta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario_alta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id_factura)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Monto_pagado)
                        </td>
                        <td>
                            <a data-modal="" href=@Url.Action("Edit", "Admin_clientes",new { id = item.Idcliente }) class="btn btn-success"> <span class="fa fa-edit"></span></a>  
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
            $(document).ready(function () {
                $('#tblistabonos').DataTable({
                    "language": {
                        "url": "/Scripts/es_es.json"
                    }
                })
            });

    </script>
}


