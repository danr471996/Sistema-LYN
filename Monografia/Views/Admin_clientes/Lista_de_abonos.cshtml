@model IEnumerable<Monografia.Models.pagos>

@{
    Layout = null;
}
@Scripts.Render("~/bundles/jqueryval")
<title>Lista_de_abonos</title>
<section>
    <table id="jquerydatatable" class="table table-striped ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Fecha de pago")
                </th>
                <th>
                    @Html.DisplayName("Usuario pago")
                </th>
                <th>
                    @Html.DisplayName("Id factura")
                </th>
                <th>
                    @Html.DisplayName("Monto pagado")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_alta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario_alta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_factura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto_pagado)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "", new { @class = "btn btn-success" })     
                    </td>
                </tr>
            }
        </tbody>
</table>
</section>
    @section Scripts
{
        <script type="text/javascript">
            $(document).ready(function () {
                $('#jquerydatatable').DataTable({
                    "language": {
                        "url": "/Scripts/es_es.json"
                    }
                })
            });
        </script>
    }
