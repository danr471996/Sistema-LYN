@model IEnumerable<Monografia.Models.clientes>

@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@Styles.Render("~/Scripts/Datatable")


   <div class="card border-start border-0 border-3 border-info">

    <div class="card-header">
        <h4 class="text-center">Clientes</h4>
    </div>

    <div class="card-body">
        <br>
        <div class="row">
            <div class="col-md-2">
                <a data-modal="" href=@Url.Action("Create", "Admin_clientes") class="btn btn-primary"> <i class="fa fa-plus">Agregar</i></a>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <table id="tbclientes" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>
                            @Html.DisplayName("Nombres y Apellidos")
                        </th>
                        <th>
                            @Html.DisplayName("Dirección")
                        </th>
                        <th>
                            @Html.DisplayName("Teléfono")
                        </th>
                        <th>
                            @Html.DisplayName("Tipo de Crédito")
                        </th>
                        <th>
                            @Html.DisplayName("Estado")
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>

                </thead>

                <tbody>
                    @{
                        int i = 0; // Inicializa el contador de fila
                    }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td scope="row">@(i)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Primer_nombre)
                                @Html.DisplayFor(modelItem => item.Segundo_nombre)
                                @Html.DisplayFor(modelItem => item.Primer_apellido)
                                @Html.DisplayFor(modelItem => item.Segundo_apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tipo_credito.Descripcion)
                            </td>
                            <td>

                                @if (item.Estado == 1)
                                {

                                    <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-check fa-lg" style="color: #4ef46f;"></i> Activo</span>
                                }
                                else
                                {

                                    <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-times fa-lg" style="color: #ff0a0a;"></i>Inactivo</span>
                                        }
                                </td>
                            <td class="text-center">
                                <a data-modal="" href=@Url.Action("Edit", "Admin_clientes",new { id = item.Idcliente })><i class="far fa-edit fa-lg" style="color: #0040ff;"></i></a>&nbsp
                                <a data-modal="" href=@Url.Action("Delete", "Admin_clientes",new { id = item.Idcliente })> <i class="far fa-trash-alt fa-lg" style="color: #ff0a0a;"></i></a>&nbsp
                                <a href=@Url.Action("Estado_cuenta", "Admin_clientes", new { id = item.Idcliente })> <i class="fas fa-file-invoice-dollar fa-lg" style="color: #4ef46f;"></i></a>
                            </td>

                        </tr>
                      
                    }

                </tbody>

            </table>
        </div>
              
    </div>
</div>


    @section Scripts
{
        @Scripts.Render("~/bundles/datatables")
        <script type="text/javascript">
            $(function () {
                $('#tbclientes').DataTable({
                    "language": {
                        "url": "/Scripts/es_es.json"
                    },scrollX:true
                })
                var tableIds = ['tbclientes']; // Lista de IDs de las tablas
                redimensionatable(tableIds);
            });
           
        </script>
    }
