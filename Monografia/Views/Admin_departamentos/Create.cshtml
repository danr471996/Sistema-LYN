@model Monografia.Models.departamento

@{
    ViewBag.Title = "Crear promocion";
}
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row col-lg-12">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })
            
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="row col-lg-12">
           
                <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
}

