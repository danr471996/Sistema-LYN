@model Monografia.Models.departamento

@{
    ViewBag.Title = "Editar departamento";
}
@Scripts.Render("~/bundles/jqueryval")
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Iddepartmento)

        <div class="row col-lg-12">
            @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-lg-4 col-md-6 col-xs-12" })
           
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control col-lg-4 col-md-6 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="row row col-lg-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
         
        </div>
    </div>


}

