
@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">

</head>
<body>
  
    <div id='title'>
       <div class="card">
           <h5 class="card-title text-primary text-center"> BIENVENIDOS AL SISTEMA</h5>
       </div>
        
     
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Sales Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card sales-card border-start border-0 border-3 border-info">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filtrar</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroventas="hoy" })">Hoy</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroventas="mes" })">Este mes</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroventas="año" })">Este año</a></li>
                                </ul>
                            </div>

                            <div class="card-body border-info">
                                <h5 class="card-title">Ventas<span>| de @ViewBag.tipofiltroventas</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-cart"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>@ViewBag.cantidadventas</h6>
                                        <span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Sales Card -->
                    <!-- Revenue Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card revenue-card border-start border-0 border-3 border-success">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filtrar</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroingresos="hoy"})">Hoy</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroingresos="mes" })">Este mes</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroingresos="año" })">Este año</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Ingresos <span>|de @ViewBag.tipofiltroingresos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>C$@ViewBag.cantidadingresos</h6>
                                        <span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Revenue Card -->
                    <!-- Customers Card -->
                    <div class="col-xxl-4 col-md-4">

                        <div class="card info-card customers-card border-start border-0 border-3 border-warning">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filtrar</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroclientes="hoy"})">Hoy</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroclientes="mes"})">Este mes</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Paginainicio", "Usuariologin",new {filtroclientes="año"})">Este año</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Clientes <span>|de @ViewBag.tipofiltroclientes</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>@ViewBag.cantidadclientes</h6>
                                        <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">decrease</span>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div><!-- End Customers Card -->
                    <!-- Reports -->
                    <div class="col-12">
                        <div class="card border-start border-0 border-3 border-info">

                            <div class="card-body">
                                <h5 class="card-title">Reporte <span>/Mensual</span></h5>

                                <!-- Line Chart -->
                                <div id="reportsChart"></div>

                                <script>
                                    document.addEventListener("DOMContentLoaded", () => {

                                        fetch('/Usuariologin/ventasporperiodo')
                                      .then(function (response) {
                                          if (response.ok) {
                                              return response.json();
                                          } else {
                                              throw new Error('Error: ' + response.status);
                                          }
                                      })
                                      .then(function (data) {
                                          // Process the response data here
                                          console.log(data);



                                          new ApexCharts(document.querySelector("#reportsChart"), {

                                              series: [{
                                                  name: 'Ventas',
                                                  data: data.ventas,
                                              }, {
                                                  name: 'Ingresos',
                                                  data: data.ingresos
                                              }, {
                                                  name: 'Clientes',
                                                  data: data.clientes
                                              }],
                                              chart: {
                                                  height: 350,
                                                  type: 'area',
                                                  toolbar: {
                                                      show: false
                                                  },
                                              },
                                              markers: {
                                                  size: 4
                                              },
                                              colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                              fill: {
                                                  type: "gradient",
                                                  gradient: {
                                                      shadeIntensity: 1,
                                                      opacityFrom: 0.3,
                                                      opacityTo: 0.4,
                                                      stops: [0, 90, 100]
                                                  }
                                              },
                                              dataLabels: {
                                                  enabled: false
                                              },
                                              stroke: {
                                                  curve: 'smooth',
                                                  width: 2
                                              },
                                              xaxis: {
                                                  type: 'string',
                                                  categories: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]
                                              }
                                          }).render();


                                      })
                                      .catch(function (error) {
                                          console.error('Request failed:', error);
                                      });

                    });
                                </script>
                                <!-- End Line Chart -->

                            </div>

                        </div>
                    </div><!-- End Reports -->
                

                </div>
            </div><!-- End Left side columns -->


        </div>
    </div>
   
   
</body>
</html>

