@model Monografia.Models.usuario_sesion

@{
    ViewBag.Title = "Inactivar cliente";
 
}
@Scripts.Render("~/bundles/jqueryval")

<div class="card">
    <div class="card-header">
        <h4>¿Está seguro de eliminar esta sesión?</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayName("Usuario")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario_alta)
            </dd>

            <dt>
                @Html.DisplayName("Estado")
            </dt>

            <dd>
                @if (Html.DisplayFor(model => model.Estado).ToHtmlString() == "1")
            {
                    <p>Activo </p>
                }
                else
                {
                    <p>Inactivo</p>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"> Guardar</i>
                </button>
        }
    </div>
</div>

