@model  Monografia.Models.Modelo_contenedor

@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@Styles.Render("~/Scripts/Datatable")
<div class="card border-top border-0 border-3 border-success">
    <div class="card-header">
        <h4>Reporte de Inventario</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-6 text-center">
                @Html.Label("","Costo de inventario: ", htmlAttributes: new { @class = "form-label col-md-6" })
                @Html.Label(" ", (string)ViewBag.costo_inventario, htmlAttributes: new { @class = "form-label col-md-6" })
             
            </div>
            <div class="col-md-6 text-center">
                @Html.Label("", "Cantidad de inventario: ", htmlAttributes: new { @class = "form-label col-md-6" })
                @Html.Label(" ", (string)ViewBag.cantidad_inventario, htmlAttributes: new { @class = "form-label col-md-6" })

            </div>
        </div>
    </div>
</div>

<div class="card border-start border-0 border-3 border-info">
    <div class="card-body">
        <br>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("reporte_inventario", "Admin_inventario", FormMethod.Post))
                {
                    <div class="row">
                        @Html.Label("", "Departamento:", htmlAttributes: new { @class = "form-label col-md-3" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.productos.Iddepartamento, new SelectList(Model.listadepartamento, "Iddepartmento", "Descripcion"), "Todos los departamentos", new { @class = "form-select", @onchange = "this.form.submit ();" })
                        </div>
                    </div>



                }
            </div>
            <div class="col-md-4">
  
            <a href=@Url.Action("exportarexcel", "Admin_inventario") class="btn btn-success"><i class="fa fa-file-excel">&nbsp;Exportar excel</i></a>
            </div>
        </div>
        <br>
        <br>
        <table id="tbreportinventario" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th>
                        @Html.DisplayName("Código de producto")
                    </th>
                    <th>
                        @Html.DisplayName("Descripción")
                    </th>
                    <th>
                        @Html.DisplayName("Precio costo")
                    </th>
                    <th>
                        @Html.DisplayName("Precio de venta")
                    </th>
                    <th>
                        @Html.DisplayName("Cantidad actual")
                    </th>
                    <th>
                        @Html.DisplayName("Cantidad mínima")
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0; // Inicializa el contador de fila
                }
                @foreach (var item in Model.listaproductos)
                {
                    i++;
                    <tr>
                        <td scope="row">@(i)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo_producto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Precio_costo)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio_venta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad_actual)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad_minima)
                        </td>
                        <td class="text-center">
                            <a data-modal="" href=@Url.Action("editar_inventario", "Admin_inventario", new {id = item.Idproducto })><i class="far fa-edit fa-lg" style="color: #ff0a0a;"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
</table>
    </div>



</div>
@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
        $(function () {
                $('#tbreportinventario').DataTable({
                    "language": {
                        "url": "/Scripts/es_es.json"
                    },scrollX:true
                })
            var tableIds = ['tbreportinventario']; // Lista de IDs de las tablas
            redimensionatable(tableIds);
            });

    </script>
}








