@model Monografia.Models.Modelo_contenedor


@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("editar_inventario", "Admin_inventario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h4>Editar inventario</h4>
        </div>
        <div class="card-body">
            <br>
            <form class="row g-3">
                <div class="row">
                    <div class="col-md-6">
                        @Html.Label("Código de producto", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.productos.Codigo_producto, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-6">
                        @Html.Label("","Cantidad", htmlAttributes: new { @class = "form-label" })
                        @Html.Editor("agregar_cantidad", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save">Guardar</i>
                </button>
        </div>
    </div>
}



