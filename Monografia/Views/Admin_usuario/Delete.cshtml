        <h4>¿Está seguro de eliminar este usuario?</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nombre")
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.usuario_detalle)
                @Html.DisplayFor(model => model.usuario_detalle.Segundo_nombre)
                @Html.DisplayFor(model => model.usuario_detalle.Primer_apellido)
                @Html.DisplayFor(model => model.usuario_detalle.Segundo_apellido)*@
