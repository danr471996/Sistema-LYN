@model  IEnumerable<Monografia.Models.usuarios_tienda>
@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}

@Styles.Render("~/Scripts/Datatable")


<div class="card border-start border-0 border-3 border-info">
    <div class="card-header">
        <h4 class="text-center">Usuarios</h4>
    </div>

    <div class="card-body">
        <br>
        <div class="row">
            <div class="col-md-2">
                <a data-modal="" href=@Url.Action("Create", "Admin_usuario") class="btn btn-primary "> <i class="fa fa-plus">Agregar</i></a>
            </div>
        </div>
        <br>
        <br>
        <table id="tbusuarios" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th>
                        @Html.DisplayName("Login")
                    </th>
                    <th>
                        @Html.DisplayName("Contraseña")
                    </th>
                    <th>
                        @Html.DisplayName("Perfil")
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0; // Inicializa el contador de fila
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td scope="row">@(i)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contraseña)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuarios_perfiles.Descripcion_perfil)
                        </td>
                        <td>
                            @if (item.Estado_usuario == 1)
                            {

                                <span class="badge rounded-pill bg-light text-dark open-sans"><i class="fas fa-check fa-lg" style="color: #4ef46f;"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-gradient text-dark open-sans"><i class="fas fa-times fa-lg" style="color: #ff0a0a;"></i>Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <a data-modal="" href=@Url.Action("Edit", "Admin_usuario", new { id = item.Idusuario })> <i class="far fa-edit fa-lg" style="color: #0040ff;"></i></a>&nbsp
                            <a data-modal="" href=@Url.Action("Delete", "Admin_usuario", new { id = item.Idusuario })> <i class="far fa-trash-alt fa-lg" style="color: #ff0a0a;"></i></a>&nbsp
                            <a data-modal="" href=@Url.Action("Details", "Admin_usuario", new { id = item.Idusuario })><i class="fas fa-info fa-lg" style="color: #0040ff;"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

   
@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
        $(function () {
                $('#tbusuarios').DataTable({
                    "language": {
                        "url":"/Scripts/es_es.json"
                    }, scrollX: true
                })
            var tableIds = ['tbusuarios']; // Lista de IDs de las tablas
            redimensionatable(tableIds);
            });
    </script>
}

