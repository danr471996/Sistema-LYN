@model  IEnumerable<Monografia.Models.usuarios_tienda>
@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}

@Styles.Render("~/Content/datatables")


<div class="card">
    <div class="card-header">
        <h4 class="text-center">Usuarios</h4>
    </div>

    <div class="card-body">
        <br>
        <div class="row col-md-2">
            <a data-modal="" href=@Url.Action("Create", "Admin_usuario") class="btn btn-primary "> <i class="fa fa-plus"></i> Agregar usuario</a>
        </div>
        <br>
        <br>
        <table id="tbusuarios" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Login")
                    </th>
                    <th>
                        @Html.DisplayName("Contraseña")
                    </th>
                    <th>
                        @Html.DisplayName("Perfil")
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contraseña)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuarios_perfiles.Descripcion_perfil)
                        </td>
                        <td>
                            @if (item.Estado_usuario == 1)
                            {

                                <div class="form-control " style="width:60%; border-radius:100px;color:#37c406;text-align:center">
                                    Activo

                                </div>
                            }
                            else
                            {
                                <div class="form-control " style="width:60%; border-radius:100px;color:#d00b0b;text-align:center">
                                    Inactivo

                                </div>
                            }
                        </td>
                        <td class="text-center">
                            <a data-modal="" href=@Url.Action("Edit", "Admin_usuario", new { id = item.Idusuario }) class="btn btn-success rounded-circle descripcion expand" data-title="Editar usuario"> <i class="fa fa-edit"></i></a>
                            <a data-modal="" href=@Url.Action("Details", "Admin_usuario", new { id = item.Idusuario }) class="btn btn-info rounded-circle descripcion expand" data-title="info usuario"> <i class="fa fa-info"></i></a>
                            <a data-modal="" href=@Url.Action("Delete", "Admin_usuario", new { id = item.Idusuario }) class="btn btn-danger rounded-circle descripcion expand" data-title="Eliminar usuario"> <i class="fa fa-trash"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

   
@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
            $(document).ready(function () {
                $('#tbusuarios').DataTable({
                    "language": {
                        "url":"/Scripts/es_es.json"
                    }
                })
            });
    </script>
}

