@model Monografia.Models.Modelo_Config

@{
    Layout = "~/Views/Menu/Menu_tienda.cshtml";
}
@using (Html.BeginForm("Tickets", "Config"))
{
    <div class="card border-start border-0 border-3 border-info">

        <div class="card-header">
            <h4 class="text-center">Personalizacion del ticket de venta</h4>
        </div>

        <div class="card-body">
            <br />

            @for (int i = 0; i < Model.Lista_opciones.Count; i++)
            {
            @Html.HiddenFor(m => Model.Lista_opciones[i].ID_OP)
            @Html.HiddenFor(m => Model.Lista_opciones[i].NOMBRE_OP)
            @Html.HiddenFor(m => Model.Lista_opciones[i].DESCRIPCION_OP)
            @Html.HiddenFor(m => Model.Lista_opciones[i].DETALLE_EXT1)
            }


            <div class="col-md-12 d-flex flex-column align-items-center">
              
                <br />
                        <div>
                            <textarea class="form-control" id="textarea1" name="textarea1" rows="4">@Model.Lista_opciones[0].DETALLE_EXT1</textarea>
                        </div>

                        <br />
                        <div>
                            <small>18 de octubre del 2021</small>
                            <small>04:23PM</small>
                        </div>
                        <br>
                        <div>
                            <small>Cantidad</small>
                            <small>Descripcion</small>
                            <small>Importe</small>
                        </div>
                        <div>
                            <small>================================================</small>
                        </div>
                        <div>
                            <small>1</small>
                            <small>Agual Ciel 600ml</small>
                            <small>$7.00</small>
                        </div>
                        <div>
                            <small>1</small>
                            <small>Coca Cola Light</small>
                            <small>$8.00</small>
                        </div>
                        <div>
                            <small>1</small>
                            <small>Coca Sprite</small>
                            <small>$8.00</small>
                        </div>
                        <div>
                            <small>1kg</small>
                            <small>Tomate</small>
                            <small>$10.00</small>
                        </div>
                        <br />
                        <div>
                            <small>No. Articulos: 4</small>
                        </div>
                        <br />
                        <div>
                            <small>Total: $33.00</small>
                        </div>
                        <br />

                        <div>
                            <textarea class="form-control" id="textarea2" name="textarea2" rows="4">@Model.Lista_opciones[1].DETALLE_EXT1</textarea>
                        </div>

               <br>
            </div>


<br />
            <div class="row">
              
                    @for (int i = 2; i < Model.Lista_opciones.Count; i++)
                    {
                        <div class="col-md-6">
                            @Html.CheckBoxFor(m => Model.Lista_opciones[i].SELECCIONADO_OP)
                            @Model.Lista_opciones[i].NOMBRE_OP

                            <strong> @Model.Lista_opciones[i].DESCRIPCION_OP</strong>
                        </div>
                        
                    }
             
            </div>




        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"> Guardar</i>
            </button>
        </div>
    </div>

}